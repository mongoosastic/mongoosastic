{
  "env":  {
    "node": true,
    "mocha": true
  },
  "extends": "airbnb/base",
  "rules": {
    "max-len": [1, 100, 2],
    "func-names": 0,
    "no-use-before-define": 1,
    "one-var": 0,
    "no-param-reassign": 0,
    "no-var": 0,
    "comma-dangle": 0,
    "padded-blocks": 0,
    "object-shorthand": 0,
    "no-restricted-syntax": ["error", "FunctionExpression", "WithStatement"],
    "no-underscore-dangle": 0,
    "consistent-return": 0
  }
}
